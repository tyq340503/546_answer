<article class="post">
    {{!--
    <h1>{{ post.title }}</h1>
    <address>Posted by
        <a href="" rel="author">{{post.poster.name}}</a>
    </address>
    <p>{{ post.body }}</p>

    {{#if post.tags.length}}
    <h3>Tags</h3>
    <ul>
        {{#each post.tags}}
        <li>
            <a href="/posts/tag/{{this}}">{{this}}</a>
        </li>
        {{/each}}
    </ul>
    {{/if}} --}}
    <h1>The Palindrome Results!</h1>
    <a href="/">Try another palindrome</a>
    {{#if data}}

    <div>
        <p class="success">text-to-test</p>
    </div>
    {{/if}} {{#if err}}

    <div>
        <p class="failure">text-to-test</p>
    </div>
    {{/if}} {{#if data}}
    <div>

        <p>success</p>
    </div>

    {{/if}} {{#if err}}
    <div>

        <p>failure</p>
    </div>
    {{/if}}
</article>